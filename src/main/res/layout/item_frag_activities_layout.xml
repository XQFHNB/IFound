<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:elevation="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_item_frag_activity"
            android:layout_width="64dp"
            android:layout_height="96dp"
            android:layout_marginRight="8dp"
            android:background="@color/label_image_bg_color"
            tools:background="@drawable/label_second_books"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_item_frag_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="18sp"
                tools:text="标题标题标题"/>

            <TextView
                android:id="@+id/description_item_frag_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="标题标题标题"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>